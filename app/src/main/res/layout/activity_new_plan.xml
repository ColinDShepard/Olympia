<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercises.NewPlan">
    <include
        android:id = "@+id/toolbar"
        layout="@layout/toolbar"
        />
    <fragment
        android:id="@+id/idExerciseFragment"
        android:name="com.example.olympia.Exercises.ExerciseListFragment"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"

        />
    <Button
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:id="@+id/idAddExerciseButton"
        android:layout_below="@id/idExerciseFragment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add Exercise"

        />
    <Button
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:id="@+id/idDoneButton"
        android:layout_below="@id/idAddExerciseButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Done"

        />


</RelativeLayout>